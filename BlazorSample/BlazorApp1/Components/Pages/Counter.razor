@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="()=>currentCount++">Click me</button>

<div class="m-4">
	<input type="text" @oninput="HandleFocus" @onblur="HandleBlur"/>
	<p>@text</p>
</div>

<div style="border: 1px solid black;" @onmouseover="MouseOver">
	<p>@divText</p>
</div>


@code {
	private int currentCount = 0;
	string text = "";
	string divText = "";

	[Parameter]
	public int IncrementAmounnt { get; set; } = 1;

	private void IncrementCount()
	{
		currentCount += IncrementAmounnt;
	}


	private void HandleInput(ChangeEventArgs e)
	{
		text = (string)e.Value!;
	}
	private void MouseOver(MouseEventArgs e)
	{
		divText = "You are Hoverring over the  div";
	}
	private void HandleBlur(FocusEventArgs e)
	{
		text = "You are not Typing";
	}
	private void HandleFocus(ChangeEventArgs e)
	{
		text = "You Are Typing ..";
	}
}
